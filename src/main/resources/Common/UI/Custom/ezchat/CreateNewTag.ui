// Import Common.ui for reusable components
$Common = "../Common.ui";

@CustomLabelStyle = LabelStyle(
  FontSize: 16,
  TextColor: #bfcdd5,
  RenderBold: true,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@CustomStyle = TextButtonStyle(
  Default: (Background: $Common.@DefaultSquareButtonDefaultBackground, LabelStyle: @CustomLabelStyle),
  Hovered: (Background: $Common.@DefaultSquareButtonHoveredBackground, LabelStyle: @CustomLabelStyle),
  Pressed: (Background: $Common.@DefaultSquareButtonPressedBackground, LabelStyle: @CustomLabelStyle),
  Disabled: (Background: $Common.@DefaultSquareButtonDisabledBackground, LabelStyle: @CustomLabelStyle),
  Sounds: $Common.@ButtonSounds,
);

// Custom button styles
@PrimaryButton = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SecondaryButton = TextButtonStyle(
  Default: (Background: #420700, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SuccessButton = TextButtonStyle(
  Default: (Background: #478f24, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2e5d22, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #55e60d, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@DangerButton = TextButtonStyle(
  Default: (Background: #bc0d0d, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #a30700, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #6a0d00, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

// Main container
$Common.@DecoratedContainer {
  Anchor: (Width: 475, Height: 700);
  Background: #141c26(0.98);
  // Title
  #Title {
    Group {
      TextButton #BackButton {
        Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
        Padding: (Left: 8, Top: 2);
        Text: "< Back";
        Style: TextButtonStyle(
          Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
          Sounds: $Common.@ButtonSounds,
        );
        Background: #000000(0.13);
      }
      $Common.@Title {
        @Text = "Create New Tag";
      }

      //      $Common.@HeaderSearch {}
    }
  }

  #Content {
    Group #NameSymbolGroup {
      LayoutMode: Left;
      Group {
        LayoutMode: Top;
        Label {
          Text: "Tag Config Name / ID";
          Anchor: (Left: 10, Height: 24);
          Style: (FontSize: 12, TextColor: #bfcdd5, RenderBold: true, RenderUppercase: true);
        }

        TextField #TagIdInput {
          Style: $Common.@DefaultInputFieldStyle;
          Background: $Common.@InputBoxBackground;
          Anchor: (Bottom: 20, Left: 10, Width: 180, Height: 30);
          Padding: (Left: 5, Right: 5);
        }
      }

      Group {
        LayoutMode: Top;
        Anchor: (Left: 25);
        Label {
          Text: "Tag";
          Anchor: (Left: 10, Height: 24);
          Style: (FontSize: 12, TextColor: #bfcdd5, RenderBold: true, RenderUppercase: true);
        }

        TextField #TagNameInput {
          Style: $Common.@DefaultInputFieldStyle;
          Background: $Common.@InputBoxBackground;
          Anchor: (Bottom: 20, Left: 10, Width: 200, Height: 30);
          Padding: (Left: 5, Right: 5);
        }
      }
    }
    Label {
      Text: "Style";
      Anchor: (Left: 10, Height: 24);
      Style: (FontSize: 12, TextColor: #bfcdd5, RenderBold: true, RenderUppercase: true);
    }

    // Checkboxes
    Group #CheckBoxesGroup {
      LayoutMode: Left;
      $Common.@CheckBoxWithLabel #TagBoldCheckBox {
        @Text = "Bold";
        Anchor: (Bottom: 5, Left: 10, Width: 75, Height: 30);
      }
      $Common.@CheckBoxWithLabel #TagUnderlineCheckBox {
        @Text = "Underline";
        Anchor: (Bottom: 5, Right: 10, Left: 10, Width: 100, Height: 30);
      }
      $Common.@CheckBoxWithLabel #TagItalicCheckBox {
        @Text = "Italic";
        Anchor: (Bottom: 5, Left: 10, Width: 75, Height: 30);
      }
      $Common.@CheckBoxWithLabel #TagMonospaceCheckBox {
        @Text = "Monospaced";
        Anchor: (Bottom: 5, Left: 10, Width: 100, Height: 30);
      }
    }

    Label #TagColorLabel {
      Text: "Tag Color";
      Style: (FontSize: 12, TextColor: #bfcdd5, RenderBold: true, RenderUppercase: true);
      Anchor: (Top: 10, Bottom: 5, Left: 10);
    }

    ColorPicker #TagColorPicker {
      Anchor: (Left: 10, Top: 5, Right: 10);
      FlexWeight: 1;
      Style: $Common.@DefaultColorPickerStyle;
    }

    // Buttons row
    Group {
      LayoutMode: Center;
      Anchor: (Top: 20, Height: 50);

      TextButton #SaveButton {
        Text: "Create";
        FlexWeight: 1;
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Anchor: (Left: 10, Top: 5, Right: 10, Height: 30);
        Style: @CustomStyle;
      }

      Group { Anchor: (Width: 16); }

      $Common.@CancelTextButton #CloseButton {
        Text: "Close";
        FlexWeight: 1;
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Anchor: (Left: 10, Top: 5, Right: 10, Height: 30);
      }
    }
  }

}
$Common.@BackButton {}