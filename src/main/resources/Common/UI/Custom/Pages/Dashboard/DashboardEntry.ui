$Common = "../../Common.ui";
Button #TheButton {
  LayoutMode: Center;
  Anchor: (Left: 2, Right: 2, Bottom: 5, Height: 60, Width: 550/3);
  Background: $Common.@InputBoxBackground;
  Padding: (Top: 4, Bottom: 4);
  Style: ButtonStyle(

    Sounds: $Common.@ButtonSounds,
  );

  Label {
    FlexWeight: 1;
  }

  Label #DashboardEntry {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #93844c
    );
    Anchor: (Top: 2);
    Padding: (Top: 14);
  }

  Label {
    FlexWeight: 1;
  }
}