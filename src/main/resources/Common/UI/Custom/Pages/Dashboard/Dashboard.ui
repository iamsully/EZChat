$Common = "../../Common.ui";
$Common.@PageOverlay {
  $Common.@DecoratedContainer {
    Anchor: (Width: 300, Height: 275);

    #Title {
      Group {
        $Common.@Title {
          @Text = "EZChat Dashboard";
        }
      }
    }

    #Content {
      LayoutMode: Center;

      Group #Main {
        LayoutMode: Center;

        Group #DashboardList {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 4);
          ScrollbarStyle: $Common.@DefaultScrollbarStyle;

          Group #DashboardCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$Common.@BackButton {}